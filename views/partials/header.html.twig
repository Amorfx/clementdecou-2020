<div class="header-outer">
    <div class="container">
        <div class="header--inner">
            <div class="columns is-vcentered">
                <div class="column is-narrow">
                    <div class="header--logo">
                        <a href="{{ fn('get_home_url') }}">
                            {{ fn('get_bloginfo', 'name') }}
                        </a>
                    </div>
                </div>
                <div class="column menu-container is-narrow">
                    <div class="columns is-vcentered">
                        <div class="column">
                            <div class="columns is-vcentered">
                                <div class="column">
                                    {% include 'partials/menu-header.html.twig' %}
                                </div>
                                <div class="column">
                                    <div class="header--rs">
                                        <ul class="is-flex">
                                            {% for itemRS in socialNetworks %}
                                                <li>
                                                    <a href="{{ itemRS['cd_theme-settings_rs--url'] }}" target="_blank" rel="noopener nofollow">
                                                        {{ itemRS['cd_theme-settings_rs--name'] }}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="column">
                            <div class="header--search-button">
                                <span>Rechercher</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

